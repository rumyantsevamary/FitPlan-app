{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["react"],
    "baseUrl": "./src",
    "paths": {
      "components": ["modules/common/components/index.ts"],
      "modules": ["modules/*"]
    }
  },
  "include": ["src/**/*"],
  "types": ["react"]
}
