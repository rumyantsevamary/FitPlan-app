{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
          ],
          "types": [ "react" ]
    },
    "include": [
        "src/**/*"
    ],
    "types": [ "react" ]
}
